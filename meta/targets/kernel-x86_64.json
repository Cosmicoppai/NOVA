{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.target.v1",
    "id": "kernel-x86_64",
    "type": "target",
    "props": {
        "toolchain": "clang",
        "arch": "x86_64",
        "sys": "hjert",
        "abi": "sysv",
        "encoding": "utf8",
        "freestanding": true,
        "host": false,
        "karm-sys-encoding": "utf8",
        "karm-sys-line-ending": "lf",
        "karm-sys-path-separator": "slash",
        "karm-cli-backend": "ansi"
    },
    "routing": {
        "stdc-math": "stdc-math-dummy"
    },
    "tools": {
        "cc": {
            "cmd": [
                "@latest",
                "clang"
            ],
            "args": [
                "-target",
                "x86_64-none-elf",
                "-ffreestanding",
                "-fno-stack-protector",
                "-mno-80387",
                "-mno-mmx",
                "-mno-3dnow",
                "-mno-sse",
                "-mno-sse2",
                "-mno-red-zone",
                "-mcmodel=kernel"
            ]
        },
        "cxx": {
            "cmd": [
                "@latest",
                "clang++"
            ],
            "args": [
                "-target",
                "x86_64-none-elf",
                "-ffreestanding",
                "-fno-stack-protector",
                "-mno-80387",
                "-mno-mmx",
                "-mno-3dnow",
                "-mno-sse",
                "-mno-sse2",
                "-mno-red-zone",
                "-mcmodel=kernel"
            ]
        },
        "ld": {
            "cmd": [
                "@latest",
                "ld.lld"
            ],
            "args": [
                "-m",
                "elf_x86_64",
                "-Tmeta/targets/kernel-x86_64.ld",
                "-z",
                "max-page-size=0x1000"
            ],
            "files": [
                "meta/targets/kernel-x86_64.ld"
            ]
        },
        "ar": {
            "cmd": [
                "@latest",
                "llvm-ar"
            ],
            "args": [
                "rcs"
            ]
        },
        "as": {
            "cmd": "nasm",
            "args": [
                "-f",
                "elf64"
            ]
        }
    }
}